<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="Basics"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="Back" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Next" />


    <!-- BASIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIICS -->
    <ImageView
        android:id="@+id/houseTypeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/houseTypeTV"
        android:layout_alignBottom="@id/houseTypeTV"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/houseTypeTV"
        android:src="@drawable/ic_home_black_24dp" />


    <TextView
        android:id="@+id/houseTypeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:text="House type:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/houseTypeET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/houseTypeTV"
        android:layout_margin="15dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/priceIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/priceTV"
        android:layout_alignBottom="@id/priceTV"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/priceTV"
        android:src="@drawable/ic_attach_money_black_24dp" />

    <TextView
        android:id="@+id/priceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/houseTypeET"
        android:layout_centerHorizontal="true"
        android:text="Price($):"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/priceET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceTV"
        android:layout_margin="15dp"
        android:digits="0123456789.,"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textAlignment="center"
        android:textCursorDrawable="@null" />

    <ImageView
        android:id="@+id/cityIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cityTV"
        android:layout_alignBottom="@id/cityTV"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/cityTV"
        android:src="@drawable/ic_location_on_black_24dp" />

    <TextView
        android:id="@+id/cityTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceET"
        android:layout_centerHorizontal="true"
        android:text="City"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/cityET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityTV"
        android:layout_margin="15dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/mainPictureTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityET"
        android:text="Upload file"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/choosePictureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainPictureTV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        android:text="Choose picture" />

    <ImageView
        android:id="@+id/mainPicIV"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/choosePictureButton"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:textAlignment="center" />

    <Button
        android:id="@+id/soldButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="25dp"
        android:background="@color/colorAccent"
        android:text="Sold?" />

    <!-- DETAIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIILS -->

    <ImageView
        android:id="@+id/descriptionIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/descriptionTV"
        android:layout_alignBottom="@id/descriptionTV"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/descriptionTV"
        android:src="@drawable/ic_description_black_24dp" />


    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:text="House description:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/descriptionET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionTV"
        android:layout_margin="15dp"
        android:imeOptions="actionDone"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/locationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/locationTV"
        android:layout_alignBottom="@+id/locationTV"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/locationTV"
        android:src="@drawable/ic_location_on_black_24dp" />


    <TextView
        android:id="@+id/locationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionET"
        android:layout_centerHorizontal="true"
        android:text="House address:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/locationET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationTV"
        android:layout_margin="15dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/sidePicturesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationET"
        android:layout_centerHorizontal="true"
        android:text="Additional pictures: "
        android:textSize="20sp" />

    <Button
        android:id="@+id/addAPictureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sidePicturesTV"
        android:layout_centerHorizontal="true"
        android:text="Add a picture" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sidePicturesIV"
        android:layout_alignBottom="@+id/sidePicturesIV"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/sidePicturesIV"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/sidePicturesIV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/addAPictureButton"
        android:layout_alignBottom="@+id/addAPictureButton"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/addAPictureButton" />

    <EditText
        android:id="@+id/photoDescriptionET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addAPictureButton"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="Image description"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textAlignment="center" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photoDescriptionET"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:text="Add" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/horizontalRecyclerViewAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addButton"
         />


    <!-- CHARACTARISTIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIICS -->

    <ImageView
        android:id="@+id/surfaceIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/surfaceTV"
        android:layout_alignBottom="@+id/surfaceTV"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/surfaceTV"
        android:src="@drawable/ic_surface_black_24dp" />

    <TextView
        android:id="@+id/surfaceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:text="Surface (m²):"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/surfaceET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/surfaceTV"
        android:layout_margin="15dp"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:singleLine="true"
        android:textAlignment="center" />


    <LinearLayout
        android:id="@+id/roomsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/surfaceET"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/bathroomsIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bathroomsTV"
                android:layout_alignStart="@+id/bathroomsTV"
                android:layout_alignEnd="@+id/bathroomsTV"
                android:src="@drawable/ic_wc_black_24dp" />


            <TextView
                android:id="@+id/bathroomsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Number of bathrooms:"
                android:textAlignment="center"
                android:textSize="20sp" />

            <NumberPicker
                android:id="@+id/bathroomsET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bathroomsIcon"
                android:layout_margin="5dp"
                android:textAlignment="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/bedroomsIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/bedroomsTV"
                android:layout_alignStart="@+id/bedroomsTV"
                android:layout_alignEnd="@+id/bedroomsTV"
                android:src="@drawable/ic_bed_black_24dp" />

            <TextView
                android:id="@+id/bedroomsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:text="Number of bedrooms:"
                android:textAlignment="center"
                android:textSize="20sp" />

            <NumberPicker
                android:id="@+id/bedroomsET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bedroomsIcon"
                android:layout_margin="5dp"
                android:textAlignment="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/roomsIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roomsTV"
                android:layout_alignStart="@+id/roomsTV"
                android:layout_alignEnd="@+id/roomsTV"
                android:src="@drawable/ic_home_black_24dp" />

            <TextView
                android:id="@+id/roomsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Number of rooms:"
                android:textAlignment="center"
                android:textSize="20sp" />

            <NumberPicker
                android:id="@+id/roomsET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/roomsIcon"
                android:layout_margin="5dp"
                android:textAlignment="center" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/interestsIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pointsOfInterestTV"
        android:layout_alignBottom="@+id/pointsOfInterestTV"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/pointsOfInterestTV"
        android:src="@drawable/ic_interest_black_24dp" />

    <TextView
        android:id="@+id/pointsOfInterestTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/roomsLL"
        android:layout_centerHorizontal="true"
        android:text="Nearby points of interests:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pointsOfInterestET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pointsOfInterestTV"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:drawableEnd="@drawable/ic_add_circle_black_24dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true"
        android:textAlignment="center"
        android:textCursorDrawable="@null" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewPOI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pointsOfInterestET"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />


</RelativeLayout>