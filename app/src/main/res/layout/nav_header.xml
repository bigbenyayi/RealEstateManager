<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/navigationDrawerBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:scaleX="1.3"
    android:scaleY="1.3">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- BACKGROUND PICTURE -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/background_navview"
            tools:ignore="MissingConstraints" />

        <!-- MAIN CONTAINER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/alpha_grey"
            android:orientation="vertical">

            <!-- APP Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:gravity="center_horizontal|center_vertical"
                android:text="Real Estate Manager"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

                <!-- User Name -->
                <TextView
                    android:id="@+id/navigation_header_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_horizontal|center_vertical|bottom"
                    android:hint="Bigbenyayi"
                    android:maxLines="1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/nav_header_text_size"
                    android:textStyle="bold" />

                <!-- User Email -->
                <TextView
                    android:id="@+id/navigation_header_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_marginStart="15dp"
                    android:ellipsize="end"
                    android:hint="benjamincorben@gmail.com"
                    android:maxLines="1"
                    android:layout_marginBottom="40dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/nav_header_text_size" />



        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>