<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginEnd="30dp">

    <ImageView
        android:id="@+id/horizontalImageRecyclerViewIV"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background_navview" />

    <ImageView
        android:id="@+id/horizontalImageRecyclerViewIVCross"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:adjustViewBounds="true"
        android:alpha=".75"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/delete" />

    <EditText
        android:id="@+id/horizontalEditTextRecyclerViewIV"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_below="@+id/horizontalImageRecyclerViewIV"
        android:layout_marginTop="10dp"
        android:hint="Description" />


</RelativeLayout>