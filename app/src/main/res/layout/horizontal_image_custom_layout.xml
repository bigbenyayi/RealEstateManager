<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginEnd="30dp">

    <ImageView
        android:id="@+id/horizontalImageRecyclerViewIV"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background_navview"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/horizontalImageRecyclerViewTV"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/horizontalImageRecyclerViewIV"
        android:background="#99000000"
        android:gravity="center"
        android:text="Lounge"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/horizontalImageRecyclerViewIVCross"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:adjustViewBounds="true"
        android:alpha=".75"
        android:padding="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/delete"
        tools:ignore="ContentDescription" />

