<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="cara"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/surfaceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="Surface: (mÂ²)"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/surfaceET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/surfaceTV"
        android:layout_margin="15dp"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:singleLine="true"
        android:textAlignment="center" />


    <LinearLayout
        android:id="@+id/roomsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/surfaceET"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bathroomsTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of bathrooms:"
                android:textAlignment="center"
                android:textSize="20sp" />

            <NumberPicker
                android:id="@+id/bathroomsET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bathroomsTV"
                android:layout_margin="15dp"
                android:textAlignment="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bedroomsTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of bedrooms:"
                android:textAlignment="center"
                android:textSize="20sp" />

            <NumberPicker
                android:id="@+id/bedroomsET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bedroomsTV"
                android:layout_margin="15dp"
                android:textAlignment="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/roomsTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of rooms:"
                android:textAlignment="center"
                android:textSize="20sp" />

            <NumberPicker
                android:id="@+id/roomsET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/roomsTV"
                android:layout_margin="15dp"
                android:textAlignment="center" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/pointsOfInterestTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/roomsLL"
        android:text="Nearby points of interests:"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pointsOfInterestET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pointsOfInterestTV"
        android:layout_margin="15dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/houseTypeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="House type:"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/houseTypeET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/houseTypeTV"
        android:layout_margin="15dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/priceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/houseTypeET"
        android:layout_marginStart="10dp"
        android:text="Price: ($)"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/priceET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceTV"
        android:layout_margin="15dp"
        android:digits="0123456789.,"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textAlignment="center"
        android:textCursorDrawable="@null" />

    <TextView
        android:id="@+id/cityTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceET"
        android:text="City"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/cityET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityTV"
        android:layout_margin="15dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="House desctription:"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/descriptionET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionTV"
        android:layout_margin="15dp"
        android:imeOptions="actionDone"
        android:minHeight="100dp"
        android:singleLine="true"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/locationTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionET"
        android:text="House address:"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/locationET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationTV"
        android:layout_margin="15dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textAlignment="center" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="Back" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Next" />


</RelativeLayout>